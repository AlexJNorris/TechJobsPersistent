<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" />
        <span></span>
    </div>

    <div class="form-group">
        <label>Select employer:</label>
        @if (ViewBag.Employers == null)
        {
            <p style="color:red">No Employers found!</p>
        } else
        {
        <select name="employer">

            @foreach (Employer employer in ViewBag.Employers)
            {
                <option value="@employer.Name">@employer.Name</option>
            }
        </select>
        }
        <a href="/employer/add">Add employer.</a>
        <span></span>
    </div>

    <input type="submit" value="Add Job" />
</form>

